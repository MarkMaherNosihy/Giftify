@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 60px);">
    <div class="col-md-6">


                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <h2 class="fs-4">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="" />
                        <label asp-for="Input.FirstName">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="" />
                        <label asp-for="Input.LastName">Last Name </label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="e.g. 15 Ramses Street" />
                        <label asp-for="Input.StreetAddress">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="e.g. Shobra" />
                         <label asp-for="Input.City">City</label>
                         <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Governorate" class="form-control" aria-required="true" placeholder="e.g. Cairo Governorate" />
                        <label asp-for="Input.Governorate">Governorate</label>
                         <span asp-validation-for="Input.Governorate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="e.g. 12345" />
                        <label asp-for="Input.PostalCode">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="e.g. 01X XXXX XXXX" />
                        <label asp-for="Input.PhoneNumber">Phone </label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div>
                        <select asp-for="Input.Role" asp-items="@Model.Input.AvailableRoles" class="form-select mb-3">
                            <option disabled selected> Select a role </option>
                        </select>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary p-3">Register</button>
                </form>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
